<h1><%=t'Editing income'%></h1>

<% form_for(@income) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  
  <p>
    <%= f.submit t'Update' %>
  </p>
<% end %>

<%= link_to t('Show'), @income %> |
<%= link_to t('Back'), incomes_path %>