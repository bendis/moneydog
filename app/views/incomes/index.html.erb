<h1><%=t'Listing incomes'%></h1>

<table>
  <tr>
    <th><%=t'Name'%></th>
    <th><%=t'Amount'%></th>
  </tr>

<% @incomes.each do |income| %>
  <tr>
    <td><%=h income.name %></td>
    <td><%=h income.amount %></td>
    <td><%= link_to t('Show'), income %></td>
    <td><%= link_to t('Edit'), edit_income_path(income) %></td>
    <td><%= link_to t('Destroy'), income, :confirm => t('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('New income'), new_income_path %>