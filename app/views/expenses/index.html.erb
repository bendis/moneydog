<h1>Listing expenses</h1>
<%= link_to 'New expense', new_expense_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Date</th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%=h expense.name %></td>
    <td class="right"><%=h price_formatted expense.price %></td>
    <td><%=h expense.date %></td>
    <td><%= link_to t('Show'), expense %></td>
    <td><%= link_to t('Edit'), edit_expense_path(expense) %></td>
    <td><%= link_to t('Destroy'), expense, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<tr>
  <th>Total: </th>
  <th class="right"><%= price_formatted @sum %></th>
  <th></th>
</tr>
</table>

